{
    "name": "Is This GraphQL",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "Boilerplate for a Chrome extension with TypeScript, React, and Webpack.",
    "homepage_url": "https://graphql.org",
    "icons": {
      "16": "icons/graphql.png",
      "48": "icons/graphql.png",
      "128": "icons/graphql.png"
    },
    "browser_action": {
      "default_title": "GraphQL"
    },
    "default_locale": "en",
    "background": {
      "scripts": [
        "js/background.js"
      ],
      "persistent": true
    },
    "permissions": [
      "webRequest",
      "https://*/*"
    ],
    "content_security_policy": "default-src 'self';",
    "content_scripts": [
      {
        "matches": [
          "https://*/*"
        ],
        "js": [
          "js/content.js"
        ]
      }
    ]
  }
  
