{
    "name": "Is This GraphQL",
    "version": "1.1.0",
    "manifest_version": 2,
    "description": "Detect when a website is using GraphQL at a glance!",
    "homepage_url": "https://graphql.org",
    "icons": {
      "16": "icons/graphql-16.png",
      "48": "icons/graphql-48.png",
      "128": "icons/graphql-128.png"
    },
    "browser_action": {
      "default_title": "GraphQL"
    },
    "background": {
      "scripts": [
        "js/background.js"
      ],
      "persistent": true
    },
    "permissions": [
      "webRequest",
      "https://*/*"
    ]
  }
  
